{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "types": [
      "jquery"
    ],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "ES2021.String"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core": ["libs/core/src/index.ts"],
      "@core/entities": ["libs/core/src/lib/entities"],
      "@core/enums": ["libs/core/src/lib/enums"],
      "@core/interfaces": ["libs/core/src/lib/interfaces"],
      "@core/types": ["libs/core/src/lib/types"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
